<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relatiive_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.bankingapp.firebase.MainActivity">

    <RelativeLayout
        android:id="@+id/relative_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_above="@+id/btn_curs_valutar"
            android:layout_alignLeft="@+id/btn_curs_valutar"
            android:layout_alignStart="@+id/btn_curs_valutar"
            android:alpha="0.5"
            android:color="#a84aff"
            android:drawableStart="@drawable/user"
            android:text="Login" />

        <Button
            android:id="@+id/btn_curs_valutar"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_above="@+id/btn_locatie"
            android:layout_alignLeft="@+id/btn_locatie"
            android:layout_alignStart="@+id/btn_locatie"
            android:alpha="0.5"
            android:color="#a84aff"
            android:drawableStart="@drawable/valutar"
            android:text="Curs Valutar" />

        <Button
            android:id="@+id/btn_locatie"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_above="@+id/btn_contact"
            android:layout_alignLeft="@+id/btn_contact"
            android:layout_alignStart="@+id/btn_contact"
            android:alpha="0.5"
            android:color="#a84aff"
            android:drawableStart="@drawable/locatie"
            android:text=" Locatie DSP BANK" />

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:alpha="0.5"
            android:color="#a84aff"
            android:drawableStart="@drawable/contact"
            android:text="Contact DSP BANK" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:fontFamily="serif"
            android:text="DSP BANK"
            android:textColor="@color/cardview_light_background"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_view"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/bank_icon" />

    </RelativeLayout>
</RelativeLayout>
