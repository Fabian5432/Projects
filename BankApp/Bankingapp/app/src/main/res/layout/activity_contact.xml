<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.bankingapp.firebase.ContactActivity">

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Icon_b"
        android:layout_centerHorizontal="true"
        android:text="Contact DSP BANK"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contact"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Contact Center(non stop)"
        android:textAllCaps="true"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text"
        android:layout_marginTop="11dp"
        android:linksClickable="true"
        android:text="0748676089"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_phone"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_above="@+id/text_view1"
        android:layout_alignEnd="@+id/mail"
        android:layout_alignRight="@+id/mail"
        android:background="@color/btn_login_color"
        android:text="Call" />

    <Button
        android:id="@+id/mail"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/text_view3"
        android:layout_alignStart="@+id/text_view3"
        android:layout_below="@+id/text_view2"
        android:layout_marginTop="18dp"
        android:background="@color/btn_login_color"
        android:text="bankingappv1@gmail.com Mail" />

    <TextView
        android:id="@+id/text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="16dp"
        android:text="@string/title_activity_contact"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_view1"
        android:layout_alignStart="@+id/text_view1"
        android:layout_below="@+id/text_view1"
        android:layout_marginTop="15dp"
        android:text="Contact Center (e-mail)"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_view2"
        android:layout_alignStart="@+id/text_view2"
        android:layout_below="@+id/mail"
        android:layout_marginTop="16dp"
        android:text="Solicita ajutor sau informatii prin e-mail"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/Icon_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/bank_icon" />

</RelativeLayout>
